{
  "name": "@portplay/server",
  "version": "1.0.0",
  "description": "PortPlay game server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
